<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowAnimationStyle">@style/TransitionAnimation</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransitionAnimation" parent="@android:style/Animation.Activity">
        <!--activity-->
        <item name="android:activityOpenEnterAnimation">@anim/open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/close_exit</item>
        <!--本地fragment-->
        <item name="android:fragmentOpenEnterAnimation">@animator/fragment_enter</item>
        <item name="android:fragmentOpenExitAnimation">@animator/fragment_exit</item>
        <item name="android:fragmentCloseEnterAnimation">@animator/pop_enter</item>
        <item name="android:fragmentCloseExitAnimation">@animator/pop_exit</item>
        <item name="android:fragmentFadeEnterAnimation">@animator/fade_in</item>
        <item name="android:fragmentFadeExitAnimation">@animator/fade_out</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--actionbar-->
        <item name="colorPrimary">@color/primaryBlue</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/primaryDarkBlue</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="colorControlNormal">@color/controlNormalGreen</item>
        <item name="colorControlActivated">@color/primaryAccent</item>
    </style>

    <style name="AppToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--actionbar-->
        <item name="colorPrimary">@color/primaryBlue</item>
        <!--状态栏-->
        <item name="colorPrimaryDark">@color/primaryDarkBlue</item>
        <item name="colorAccent">@color/primaryAccent</item>
        <item name="colorControlNormal">@color/controlNormalGreen</item>
        <item name="colorControlActivated">@color/primaryAccent</item>
    </style>

    <style name="FormRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/background_radio</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="FormCheckbox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:minWidth">@dimen/checkboxWidth</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/text_checkbox</item>
    </style>

    <style name="Button.Extended" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:minWidth">@dimen/checkboxWidth</item>
        <item name="android:minHeight">@dimen/buttonHeight</item>
        <item name="android:background">@color/background_radio</item>
        <item name="android:textColor">@color/text_checkbox</item>
    </style>


</resources>
